function _harvester () {
	local cur
	local previous
	local hcl_aliases_file=~/.hcl/aliases
	local projects=$(sed 's/@//g' "$hcl_aliases_file")

	COMPREPLY=()
	cur=${COMP_WORDS[COMP_CWORD]}
	previous=${COMP_WORDS[COMP_CWORD - 1]}

	if [ "$previous" = '-p' \
		-o "$previous" = '--project' \
	]; then
		COMPREPLY=( $(compgen -W "$projects" -- $cur) )
	fi

	return 0
}

complete -F _harvester harvester
